{% extends "parent" %}

{% block title %} {{post.title}} - {{pageTitle}} {% endblock %}
{% block heading %} {{post.title}} {% endblock %}

{% block content %}
{{content|raw}}
{% endblock %}

{% block sidebar_heading %} All Blog Postings {% endblock %}

{% block sidebar_list %}
{% for post in blog %}
<li><a href="{{ post.url }}">{{ post.title}} </a></li>
{% else %}
<p> There are no posts. </p>
{% endfor %}
{% endblock %}
